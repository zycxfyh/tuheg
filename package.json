{
  "name": "creation-ring",
  "version": "1.0.0",
  "description": "AI创作操作系统的操作系统 - 创世星环",
  "main": "index.js",
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,scss,html,vue}": [
      "npx biome check --write --no-errors-on-unmatched",
      "npx biome format --write --no-errors-on-unmatched"
    ],
    "*.{js,ts,jsx,tsx}": [
      "npx biome check --write --no-errors-on-unmatched"
    ]
  },
  "scripts": {
    "build": "nx build",
    "build:all": "nx run-many --target=build --all",
    "dev": "nx dev",
    "dev:all": "nx run-many --target=dev --all --parallel",
    "lint": "npx biome check . || (echo '❌ Linting failed - fix issues before committing' && exit 1)",
    "lint:fix": "npx biome check --write --unsafe .",
    "lint:strict": "npx biome check --max-diagnostics=0 . || (echo '❌ Strict linting failed' && exit 1)",
    "lint:legacy": "turbo lint",
    "lint:fix:legacy": "turbo lint:fix",
    "format": "npx biome format --write .",
    "format:check": "npx biome format . || (echo '❌ Code formatting issues found' && exit 1)",
    "format:legacy": "prettier --write .",
    "format:check:legacy": "prettier --check .",
    "check": "npx biome check . && npx biome format .",
    "fix": "npx biome check --write --unsafe . && npx biome format --write .",
    "fix:all": "npx biome check --write --unsafe --organize-imports . && npx biome format --write .",
    "organize-imports": "npx biome check --write --organize-imports .",
    "biome:check": "npx biome check .",
    "biome:fix": "npx biome check --write --unsafe .",
    "biome:format": "npx biome format --write .",
    "auto-fix": "node scripts/auto-fix.js",
    "auto-fix:all": "node scripts/auto-fix.js --all",
    "auto-fix:check": "node scripts/auto-fix.js --check",
    "auto-fix:staged": "node scripts/auto-fix.js --staged",
    "test": "node scripts/test-runner.js unit",
    "test:all": "nx run-many --target=test --all",
    "test:unit": "node scripts/test-runner.js unit",
    "test:integration": "node scripts/test-runner.js integration",
    "test:e2e": "node scripts/test-runner.js e2e",
    "test:watch": "node scripts/test-runner.js watch",
    "test:coverage": "node scripts/test-runner.js coverage",
    "test:fail-fast": "node scripts/test-runner.js fail-fast",
    "test:performance": "echo '⚠️ Performance tests not implemented yet - placeholder script'",
    "test:security": "echo '⚠️ Security tests not implemented yet - placeholder script'",
    "test:ci": "node scripts/test-runner.js ci",
    "test:report": "node scripts/test-runner.js report",
    "type-check": "turbo type-check || (echo '❌ TypeScript check failed' && exit 1)",
    "type-check:strict": "turbo type-check:strict || (echo '❌ Strict TypeScript check failed' && exit 1)",
    "clean": "turbo clean",
    "prepare": "husky install",
    "release": "turbo release",
    "docker:build": "docker build -t creation-ring .",
    "docker:run": "docker run -p 3000:3000 creation-ring",
    "docs:build": "turbo docs:build",
    "docs:serve": "turbo docs:serve",
    "tools:migrate-api-keys": "node tools/scripts/migrate-api-keys-to-encrypted.mjs",
    "tools:generate-env": "node tools/scripts/generate-secure-env.mjs",
    "protect:check": "node scripts/protect-critical-files.js",
    "pre-commit": "pnpm lint:strict && pnpm format:check && pnpm type-check:strict && pnpm test:fail-fast && pnpm audit",
    "ci": "pnpm lint:strict && pnpm format:check && pnpm type-check:strict && pnpm test:all && pnpm audit",
    "audit": "pnpm audit --audit-level high || (echo '❌ Security vulnerabilities found' && exit 1)",
    "audit:fix": "pnpm audit --fix",
    "deps:check": "pnpm outdated || (echo '⚠️ Outdated dependencies found' && exit 0)",
    "deps:update": "pnpm update --latest",
    "health-check": "node scripts/health-check.js || (echo '❌ Health check failed' && exit 1)",
    "validate": "pnpm health-check && pnpm lint:strict && pnpm format:check && pnpm type-check && pnpm test:fail-fast && pnpm audit",
    "quality-check": "node scripts/strict-quality-check.js",
    "quality-check:ci": "node scripts/strict-quality-check.js"
  },
  "keywords": [
    "ai",
    "creation",
    "game",
    "narrative",
    "microservices",
    "vue",
    "nestjs",
    "typescript"
  ],
  "author": "Creation Ring Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/creation-ring.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/creation-ring/issues"
  },
  "homepage": "https://github.com/your-org/creation-ring#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@jest/reporters": "^30.2.0",
    "@nx/jest": "^22.0.2",
    "@nx/vite": "^22.0.2",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^4.0.0",
    "jest-ts-webcompat-resolver": "^1.0.1",
    "lint-staged": "^15.5.2",
    "nx": "22.0.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "turbo": "^1.0.0",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ]
}
