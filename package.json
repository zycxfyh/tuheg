{
  "name": "creation-ring",
  "version": "1.0.0",
  "description": "AI创作操作系统的操作系统 - 创世星环",
  "main": "index.js",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "release": "turbo release",
    "docker:build": "docker build -t creation-ring .",
    "docker:run": "docker run -p 3000:3000 creation-ring",
    "docs:build": "turbo docs:build",
    "docs:serve": "turbo docs:serve"
  },
  "keywords": [
    "ai",
    "creation",
    "game",
    "narrative",
    "microservices",
    "vue",
    "nestjs",
    "typescript"
  ],
  "author": "Creation Ring Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/creation-ring.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/creation-ring/issues"
  },
  "homepage": "https://github.com/your-org/creation-ring#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "turbo": "^1.0.0",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
