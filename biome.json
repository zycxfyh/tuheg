{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "files": {
    "includes": [
      "**/apps/**/*.ts",
      "**/apps/**/*.js",
      "**/apps/**/*.vue",
      "**/packages/**/*.ts",
      "**/packages/**/*.js",
      "**/tools/**/*.ts",
      "**/tools/**/*.js",
      "**/*.ts",
      "**/*.js",
      "**/*.json",
      "**/*.md",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/*.d.ts",
      "!**/*.config.js",
      "!**/*.config.ts",
      "!**/vcptoolbox-core",
      "!**/coverage",
      "!**/.nx",
      "!**/tmp",
      "!**/logs"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useConst": "warn",
        "useImportType": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noDebugger": "warn",
        "noDoubleEquals": "warn"
      },
      "performance": {
        "noDelete": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always"
    },
    "globals": ["console", "process", "Buffer", "__dirname", "__filename"],
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "parser": {
      "allowComments": false,
      "allowTrailingCommas": false
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  }
}
