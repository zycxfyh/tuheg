# ============================================================================
# 创世星环 - VCPToolBox配置文件
# 深度借鉴开源VCPToolBox (https://github.com/lioensky/VCPToolBox) 的配置理念
# ============================================================================

# Agent专用配置目录
AgentNova=Nova.txt

# 前置系统变量 - 环境感知和动态更新
TarSysPrompt="{{VarTimeNow}}当前地址是{{VarCity}},当前天气是{{VCPWeatherInfo}}。"

# 表情包功能配置
TarEmojiPrompt='本服务器支持表情包功能，通用表情包图床路径为{{VarHttpUrl}}:5890/pw={{Image_Key}}/images/通用表情包，注意[/通用表情包]路径指代，表情包列表为{{通用表情包}}，你可以灵活的在你的输出中插入表情包，调用方式为<img src="{{VarHttpUrl}}:5890/pw={{Image_Key}}/images/通用表情包/阿库娅-一脸智障.jpg" width="150">,使用Width参数来控制表情包尺寸（50-200）。'

# VCP类工具列表 - 动态获取可用工具
VarToolList="文生图工具{{VCPFluxGen}} 计算器工具{{VCPSciCalculator}},联网搜索工具{{VCPTavilySearch}},网页获取工具{{VCPUrlFetch}}；看b站视频工具{{VCPBilibiliFetch}}；使用Suno唱歌工具{{VCPSunoGen}},联络别的AI工具{{VCPAgentAssistant}},给用户的手机/电脑发消息工具{{AgentMessage}}。"

# 记忆系统配置
MemoryNetworkEnabled=true
MemorySimilarityThreshold=0.7
MemoryImportanceDecay=0.95

# Agent协作配置
AgentCollaborationEnabled=true
MaxConcurrentAgents=5
AgentCommunicationTimeout=30000

# 插件系统配置
PluginAutoLoad=true
PluginHotReload=true
PluginSecurityLevel=medium

# 工具集成配置
ToolTimeout=60000
ToolRetryAttempts=3
ToolRateLimit=60

# 分布式配置
DistributedMode=false
LoadBalancerEnabled=false
NodeDiscoveryEnabled=false

# 安全配置
ApiKeyEncryption=true
RequestLogging=true
AuditTrailEnabled=true

# 性能配置
CacheEnabled=true
CacheTTL=3600000
CompressionEnabled=true
ConnectionPoolSize=10

# 监控配置
MetricsEnabled=true
HealthCheckInterval=30000
PerformanceMonitoring=true

# 国际化配置
DefaultLanguage=zh-CN
SupportedLanguages=zh-CN,en-US,ja-JP,ko-KR

# 主题配置
DefaultTheme=dark
ThemeHotReload=true

# 导出配置
DefaultExportFormat=markdown
SupportedExportFormats=markdown,pdf,epub,html,json

# 备份配置
AutoBackupEnabled=true
BackupInterval=86400000
BackupRetentionDays=30

# 开发配置
DebugMode=false
DevToolsEnabled=true
MockServicesEnabled=false
