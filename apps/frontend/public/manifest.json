    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/#/editor/import",
      "accept": {
        "application/json": [".crn"],
        "text/markdown": [".md"],
        "application/zip": [".zip"]
      },
      "icons": [
        {
          "src": "/icons/file-handler.png",
          "sizes": "256x256"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "/#/editor/import",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "files",
          "accept": ["text/*", "image/*", ".crn", ".md"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+creationring",
      "url": "/#/handle/%s"
    }
  ]
}
