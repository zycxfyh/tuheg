// Basic Prisma schema for CI/CD testing
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Core models for basic functionality
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  games        Game[]
  aiConfigs    AiConfiguration[]

  @@map("users")
}

model Game {
  id          String   @id @default(cuid())
  name        String
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  characters Character[]
  tasks      Task[]

  @@map("games")
}

model Character {
  id          String   @id @default(cuid())
  gameId      String
  game        Game     @relation(fields: [gameId], references: [id])
  name        String
  description String
  stats       Json     @default("{}")
  inventory   Json     @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("characters")
}

model Task {
  id          String   @id @default(cuid())
  gameId      String?
  game        Game?    @relation(fields: [gameId], references: [id])
  title       String
  description String?
  status      String   @default("pending")
  priority    Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tasks")
}

model AiConfiguration {
  id        String   @id @default(cuid())
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  provider  String
  apiKey    String
  modelId   String
  baseUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ai_configurations")
}