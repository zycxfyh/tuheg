# Docker Environment Variables for Creation Ring
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/creation_ring
DB_CONNECTION_LIMIT=20
DB_POOL_TIMEOUT=20
DB_IDLE_TIMEOUT=300

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# DeepSeek AI Configuration
DEEPSEEK_API_KEY=sk-345d3aa211c64eb1956fd087299c234f
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Application Configuration
NODE_ENV=production
PORT=4000
CORS_ORIGIN=http://localhost:3000

# Encryption Configuration (Generate secure random values)
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_SALT=your-16-character-salt-here
ENCRYPTION_USE_SALT=true
ENCRYPTION_ALGORITHM=aes-256-gcm

# Sentry Configuration (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=1.0

# AI Provider Fallback Configuration
FALLBACK_API_KEY=sk-345d3aa211c64eb1956fd087299c234f
FALLBACK_MODEL_ID=deepseek-chat
FALLBACK_BASE_URL=https://api.deepseek.com/v1

# Agent HTTP Ports
CREATION_AGENT_HTTP_PORT=8080
LOGIC_AGENT_HTTP_PORT=8081
NARRATIVE_AGENT_HTTP_PORT=8082

# Logging
LOG_LEVEL=info
