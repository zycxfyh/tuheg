        this.logger.log(`Publishing event "${eventName}" to the event bus.`);
        // [核心] client.emit() 用于“发射后不管”的事件广播。
        // 它会将事件名作为路由键，将数据作为消息体，发送到 RabbitMQ。
        this.client.emit(eventName, data);
    }
